pipeline {
    agent
    {
        docker {
            image 'node:lts-buster-slim'   
            args '-p 3000:3000' 
        }
    }
     environment {
        CI = 'true'
    }
    stages {
        stage('Build') {
            steps {
                sh 'npm config set proxy http://user:pass@host:port'
                sh 'npm install'
                sh 'npm run build'
                
            }
        }
        
        
        
        
    }       
}
